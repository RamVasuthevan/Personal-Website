{% extends "_layouts/base.njk" %}

{% block content %}
  <h2>Subdirectories</h2>

  <ul>
    {%- for post in collections.all -%}
      {% if post.url.startsWith(page.url) and post.url.split('/').length == (page.url.split('/').length + 1) %}
        <li><a href="{{ post.url }}">{{ post.data.title }} </a></li>
      {% endif %}
    {%- endfor -%}
  </ul>

   {{ content | safe }}

{% endblock %}

